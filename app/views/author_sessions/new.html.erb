<h1>Login</h1>

<div class="container">
	<div class="row">
		<div class="col-lg-12">
			<div class="loginWrapper">
				<%= label_tag :email %>
				<br>
				<%= text_field_tag :email %>
				<br>
				<%= label_tag :password %>
				<br>
				<%= password_field_tag :password %>
				<br>
				<br>
				<%= submit_tag "Login" %>
			</div>
		</div>
	</div>
</div>

